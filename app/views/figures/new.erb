<form action='/figures' method='POST'>
  <label for='figure[name]'>Name</label>
  <input type='text' id='figure_name' name='figure[name]'>
  <h2>Titles</h2>
  <%@titles.each do |title|%>
    <%=title.name%> <input type='checkbox' name='figure[title_ids][]' id='title_#{Title.first.id}' value='<%=title.id%>'><br>
  <%end%>
  <h2>Create New Title:</h2>
  <input type='text' name='title[name]'><br>
  <h2>Landmarks</h2>
  <%@landmarks.each do |landmark|%>
    <%=landmark.name%> <input type='checkbox' name='figure[landmark_ids][]' value='<%=landmark.id%>'><br>
  <%end%>
  <h2>Create New Landmark</h2>
  <label for='landmark[name]'>Name:</label>
  <input type='text' name='landmark[name]'>
  <label for='landmark[year_completed]'>Year:</label>
  <input type='text' name='landmark[year_completed]'>
  <input type='submit' value='Create New Figure'>
</form>
